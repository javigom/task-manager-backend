# Docker
COMPOSE_FILE=docker/docker-compose.yml

# Database configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DB_NAME=task_manager

# JWT configuration
# IMPORTANT: Generate a secure random key in production: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# CORS configuration
# Use "*" for all origins (dev only) or comma-separated list: "http://localhost:3000,https://app.example.com"
CORS_ORIGINS=*

# Environment (development, staging, production)
ENVIRONMENT=development

# Docker host port mappings (optional, defaults shown)
HOST_DB_PORT=5433
HOST_WEB_PORT=8001